<div class="card">
  <div class="card__thumb">
    <a href="#">
      <%
        if(photo_url.nil?)
          photo_url = 'http://fpoimg.com/255x170'
        end
      %>
      <%= image_tag(photo_url)%>
    </a>
    <div class="card__intro">
      <h4 class="card__title"><%= title %></h4>
      <span><%= done_count %> have done this</span>
    </div>
  </div>
  <div class="card__footer">
    <% if editable %>
      <button class="btn delta" type="submit">
        <svg class="icon-delete" role="presentation">
          <use href="../icons/icons-defs.svg#delete"></use>
        </svg>
        Delete
      </button>
      <a class="btn delta" href="#no-link">
        <svg class="icon-edit" role="presentation">
          <use xlink:href="../icons/icons-defs.svg#edit"></use>
        </svg>
        Edit
      </a>
    <% else %>
      <button class="card__btn card__like delta" data-like="see-the-northern-lights">
        <svg class="icon-heart icon-heart--liked" role="presentation">
          <use xlink:href="images/icons/icons-defs.svg#heart"></use>
        </svg>
        Like
      </button>
      <button class="card__btn card__add delta" data-addGoal="see-the-northern-lights">
        <svg class="icon-pluss" role="presentation">
          <use xlink:href="images/icons/icons-defs.svg#pluss"></use>
        </svg>
        Add Goal
      </button>
    <% end %>
  </div>
</div>

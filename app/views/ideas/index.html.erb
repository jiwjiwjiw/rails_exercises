<main>
  <div class="content-wrapper">
    <h1>Results for <%= @search_term %></h1>
  </div>
  <div class="content-wrapper">
    <ul class="bare-list float-grid css-grid">
      <% ['See the northern lights',
          'Swim with dolphins',
          'Learn to bake cupcakes'].each do |name| %>
        <li>
          <%= render(partial: 'idea_card', locals: {title: name}) %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="see-more">
    <button class="btn" type="button" data-more="true">See more</button>
  </div>
</main>
